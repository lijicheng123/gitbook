{
    "title": "最美文档",
    "description": "技术文档的最佳实践",
    "author": "lijicheng",
    "output.name": "doc",
    "language": "zh-hans",
    "gitbook": "3.2.3",
    "structure": {
        "readme": "README.md"
    },
    "links": {
        "sidebar": {
            "官方网站": "http://baidu.com"
        }
    },
    "styles": {
        "website": "styles/website.css",
        "ebook": "styles/ebook.css",
        "pdf": "styles/pdf.css",
        "mobi": "styles/mobi.css",
        "epub": "styles/epub.css"
     },
    "plugins": [
    "favicon",
    "github",
    "include-html",
    "tbfed-pagefooter",
    "expandable-chapters-small",
    "editlink",
    "copy-code-button",
    "splitter",
    "multipart"
    ],
    "pluginsConfig": {
        "favicon": {
            "shortcut": "assets/images/favicon.ico",
            "bookmark": "assets/images/favicon.ico",
            "appleTouch": "assets/images/favicon.ico",
            "appleTouchMore": {
                "120x120": "assets/images/apple-touch-icon-120x120.png",
                "180x180": "assets/images/apple-touch-icon-180x180.png"
            }
        },
        "github": {
            "url": "https://github.com/lijicheng123/gitbook.git"
        },
        "tbfed-pagefooter": {
        "copyright":"Copyright &copy lijicheng 2018",
        "modify_label": "该文件修订时间：",
        "modify_format": "YYYY-MM-DD HH:mm:ss"
        },
        "expandable-chapters-small":{},
         "editlink": {
          "base": "https://github.com/lijicheng123/gitbook/edit/master",
          "label": "编辑本页",
          "multilingual": false
        }
     }    
}